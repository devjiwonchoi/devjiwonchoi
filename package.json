{
  "name": "devjiwonchoi",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "tb": "turbo build",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@tailwindcss/postcss": "^4.0.13",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "eslint": "^9.22.0",
    "eslint-config-next": "canary",
    "next": "canary",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "resend": "^4.1.2",
    "tailwindcss": "^4.0.13",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.4.4",
    "vercel": "^41.4.0"
  },
  "lint-staged": {
    "*.{js,mjs,jsx,ts,tsx}": [
      "next lint --max-warnings=0 --fix --file",
      "prettier --write"
    ],
    "*.{css,json,md,mdx,yml,yaml}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "trailingComma": "es5",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "postcss": {
    "plugins": [
      "@tailwindcss/postcss"
    ]
  },
  "packageManager": "pnpm@9.6.0"
}
